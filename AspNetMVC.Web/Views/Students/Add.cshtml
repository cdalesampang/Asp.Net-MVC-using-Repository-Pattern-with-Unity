@model AspNetMVC.Web.Models.StudentAddVM
@{
    ViewBag.Title = "Add";
}
@using (Html.BeginForm("Add", "Students", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Student Information
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(x => x.Student.FirstName, new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.Student.FirstName, new { @class = "form-control", placeholder = "Enter First Name", required = "required" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Student.LastName, new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.Student.LastName, new { @class = "form-control", placeholder="Enter Last Name", required = "required" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Student.Address, new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.Student.Address, new { @class = "form-control", placeholder = "Enter Address", required = "required" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Student.PhoneNumber, new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.Student.PhoneNumber, new { @class = "form-control", placeholder = "Enter Phone Number", required = "required" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Course", new { @class = "control-label" })
                        @Html.ListBox("courses",Model.Courses, new { @class = "form-control", required = "required" })
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
