@using PagedList.Mvc;
@model PagedList.IPagedList<AspNetMVC.DAL.Models.Student>
@{
    ViewBag.Title = "Students";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Course Students
    </div>
    <div class="panel-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Course</th>
                    <th>Address</th>
                    <th>Phone Number</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>
                            @foreach (var data in item.StudentCourses)
                            {
                                <p>@data.Course.Code</p>
                            }
                        </td>
                        <td>@item.Address</td>
                        <td>@item.PhoneNumber</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="7">@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))</td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>